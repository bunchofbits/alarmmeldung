<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp">

    <TextView
        android:id="@+id/lst_group_txt"
        android:layout_weight="1.00"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:gravity="center_vertical" />


    <ImageView
        android:id="@+id/lst_group_add_member"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:onClick="addMemberToGroupOnClick"
        android:src="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/lst_group_edit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:onClick="editGroupOnCLick"
        android:src="@android:drawable/ic_menu_edit" />


    <ImageView
        android:id="@+id/lst_group_delete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:onClick="deleteGroupOnClick"
        android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>